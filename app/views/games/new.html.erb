
<h1>New Game</h1>
<ul>
  <% @letters.each do |letter| %>
    <li><%= letter.capitalize %></li>
  <% end %>
</ul>


<form action="score" method="post">
  <h2>What is the longest word you can find?</h2>
  <input type="text" name="word" placeholder="Your word">
  <input type="submit" value="Play">
  <input id="tags_list" name="start_time" type="hidden" value="<%= @start_time %>"/>
  <input id="tags_list" name="letters" type="hidden" value="<%=@letters%>" />
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
